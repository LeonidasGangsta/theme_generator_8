{{ attach_library('<%= themeNameMachine %>/media') }}

<div class="media-item">
  {% if video %}
    <div class="media-item__responsive-video">
      {{ video }}
    </div>
  {% else %}
    <div class="media-item__image">
      {{ image }}
    </div>
  {% endif %}
  {% if caption %}
    <div class="media-item__caption">
      {{ caption }}
    </div>
  {% endif %}
</div>
